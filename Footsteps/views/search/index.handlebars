<div class="row">
<div class="col-xs-12">
<h1>Search for a walker near you</h1>
</div>


<div class="col-xs-12">
{{#if errors}}
  <h3>Errors occured</h3>
  {{#each errors}}
    <p>Path: {{path}}</p>
    <p>Message: {{message}}</p>
    <hr />
  {{/each}}
{{/if}}
  <form name="create-post" action="/search" method="post">
  <div class="form-group">
    <label>Search</label>
    <input type="text" name="search" placeholder="please enter your zip code">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
</div>