<div class="row">
<div class="col-xs-12">
<h1>Search for a walker near you</h1>
</div>


<div class="col-xs-12">
{{#if errors}}
  <h3>Errors occured</h3>
  {{#each errors}}
    <p>Path: {{path}}</p>
    <p>Message: {{message}}</p>
    <hr />
  {{/each}}
{{/if}}
  <form name="create-post" action="/search" method="post">
  <div class="form-group">
    <label>Search</label>
    <input type="text" name="search" placeholder="please enter your zip code">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
</div>

<!DOCTYPE html>
<html>
  <head>
    <style>
       #map {
        height: 400px;
        width: 100%;
       }
    </style>
  </head>
  <body>
    <h3>My Google Maps Demo</h3>
    <div id="map"></div>
    <script>
      function initMap() {
        var uluru = {lat: 90.0, lng: 90.0};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 4,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB4sxlZ_0hHnv_tBvv0SEJGQtzTCWgW4mM&callback=initMap">
    </script>
  </body>
</html>